<div class="card text-dark bg-secondary mb-5">
<div class="card-header">
<h4><i class="fa fa-book"></i> <%= link_to course.title, course_path(course), style: "color:#404040; text-decoration:none;" %></h4>
</div>
<div class="card-body bg-secondary">
<h6><%= course.description %></h6>
<p><%= course.short_description %></p>
</div>
<div class="card-footer">
<div class="row">
<div class="col-md-6">
<i class="fa fa-globe-africa"></i>  <%= course.language %>
</div>
<div class="col-md-6">
<i class="fa fa-signal"></i> <%= course.level %> 
</div>
<div class="mt-3">
<i class="fa fa-money-bill"></i> <%= number_to_currency(course.price) %> 
</div>
</div>
</div>
<div class="card-footer">
<div class="row">
<div class="col-md-6">
<i class="fa fa-clock"></i>  <%= course.created_at.strftime('%d-%b-%y') %>
</div>
<div class="col-md-6">
 <%= course.user %> 
 </div>
 </div>
</div>
<div class="card-footer mb-1">
<%= link_to "Show", course, class: "btn btn-sm btn-primary" %>
<%= link_to "Edit", edit_course_path(course), class: 'btn btn-sm btn-warning' %>
<%= link_to "Delete", course, method: :delete, data: { confirm: "Are You Sure?" }, class: "btn btn-sm btn-danger" %>
</div>
</div>